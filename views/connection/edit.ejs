<%- include('../partials/header.ejs')%>
<div class = "content">
    <form method= "POST" action = "/connections/<%=connection.id%>?_method=PUT">
        <table id="editFormTable">
            <tr>
                <td><label for="name" >Event Name</label></td>
                <td><input type="text" id="name" name="name" value = "<%= connection.name%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="topic" >Topic</label></td>
                <td><input type="text" id="topic" name="topic" value = "<%= connection.topic%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="details" >Details</label></td>
                <td><textarea id="details" name="details" rows="4" cols="50" class = "fixed-width" required minlength="10"><%= connection.details%>
                </textarea></td>
            </tr>
            <tr>
                <td><label for="date" >Date</label></td>
                <td><input type="date" id="date" name="date" value = "<%= connection.date%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="startTime" >Start Time</label></td>
                <td><input type="text" id="startTime" name="startTime" value ="<% if (connection.startTime.includes("AM")) { %><%= connection.startTime %><% } else {%><%= connection.startTime %> AM<% } %>"
                     class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="endTime" >End Time</label></td>
                <td><input type="text" id="endTime" name="endTime" value = "<% if (connection.endTime.includes("PM")) { %><%= connection.endTime %><% } else {%><%= connection.endTime %> PM<% } %>"
                     class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="location" >Location</label></td>
                <td><input type="text" id="location" name="location" value = "<%= connection.location%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="image" >Image URL</label></td>
                <td><input type="text" id="image" name="image" value = "<%= connection.image%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
            </table>        
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>
